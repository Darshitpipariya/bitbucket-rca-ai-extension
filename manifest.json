{
    "manifest_version": 3,
    "name": "BugZilla RCA Helper",
    "version": "1.0.0",
    "description": "Generate Root Cause Analysis from Bitbucket Pull Request changes using AI",
    "permissions": [
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "https://bitbucket.org/*",
        "https://api.bitbucket.org/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_title": "Open BugZilla RCA Helper",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}